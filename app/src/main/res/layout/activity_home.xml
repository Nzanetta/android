<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@drawable/home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:gravity="center"
        android:background="#A0504E4E">

        <TextView
            android:id="@+id/txt_Home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:paddingBottom="10dp"
            android:text="Menú"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|center_vertical"
            android:background="@drawable/btn_redondo_google"
            android:padding="14dp">

            <Button
                android:id="@+id/btnListar"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="MI INVENTARIO"
                android:background="@drawable/btn_redondo_login"

                android:layout_margin="2dp" />

            <Button
                android:id="@+id/btnInventario"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="SKINS MÁS VENDIDAS"
                android:background="@drawable/btn_redondo_login"
                android:layout_margin="2dp"/>

            <Button
                android:id="@+id/btnNoticias"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="Noticias"
                android:background="@drawable/btn_redondo_login"
                android:layout_margin="2dp"/>


        </LinearLayout>
        <Button
            android:id="@+id/logOutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="530dp"
            android:background="#FF0000"
            android:text="Cerrar Sesión" />

    </LinearLayout>




</ScrollView>